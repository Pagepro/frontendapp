{
  "env": {
    "browser": true, // browser global variables
    "amd": true,
    "node": true
  },
  "globals": {
    "angular": true,
    "describe": true,
    "beforeEach": true,
    "it": true,
    "expect": true,
    "inject": true
  },
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-in-brackets": [0, "never"],
    "space-infix-ops": 2,
    "no-warning-comments": [1, { "terms": ["todo", "fixme", "any other term"], "location": "anywhere" }]
  }
}
